{% extends 'base.html.twig' %}

{% block title %}Données de {{ contact.lastname }}{% endblock %}

{% block body %}
    <h1>Données de {{ contact.lastname }}, {{ contact.firstname }}</h1>

    <dl>
        <dt>Nom :</dt>
            <dd>{{ contact.lastname }}</dd>
        <dt>Prenom :</dt>
            <dd>{{ contact.firstname }}</dd>
        <dt>E-Mail :</dt>
            <dd>{{ contact.email }}</dd>
        <dt>Téléphone : </dt>
            <dd>{{ contact.phone }}</dd>
        <dt>Catégorie : </dt>
            <dd>{{ contact.category.name ?? 'non renseigné' }}</dd>
    </dl>
{% endblock %}



